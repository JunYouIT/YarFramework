@{

    Yar.Service.BusinessContext context = Model.Context;


}
<!DOCTYPE html>
<html lang="zh-cn" class="no-js">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta http-equiv="pragma" content="no-cache">
    <meta http-equiv="Cache-Control" content="no-cache, must-revalidate">
    <meta http-equiv="expires" content="0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,Chrome=1">
    <meta http-equiv="X-UA-Compatible" content="IE=9" />
    <meta content="width=device-width, initial-scale=1" name="viewport">
    <title>钧优ERP管理云</title>
    <meta name="description" content="钧优ERP管理云登录" />
    <link href="@Yar.Core.YarSystem.GetViewSitePath("/ApiViews/Scripts/Login/login.css")" rel="stylesheet" type="text/css">
    <script src="@Yar.Core.YarSystem.GetViewSitePath("/ApiViews/Scripts/jquery.min.js")" type="text/javascript"></script>
    <script src="@Yar.Core.YarSystem.GetViewSitePath("/ApiViews/Scripts/jquery.json-2.4.min.js")" type="text/javascript"></script>
    <script src="@Yar.Core.YarSystem.GetViewSitePath("/ApiViews/Scripts/md5.js")" type="text/javascript"></script>
    <script src="@Yar.Core.YarSystem.GetViewSitePath("/ApiViews/Scripts/jquery.base64.js")" type="text/javascript"></script>
    <script src="@Yar.Core.YarSystem.GetViewSitePath("/ApiViews/Scripts/Login/login.js")" type="text/javascript"></script>
    <!--[if lte IE 9]>
    <style type="text/css">
     </style>
    <![endif]-->
</head>
<body>
    <table border="0" cellpadding="0" cellspacing="0" class="tablewrapper">
        <tbody>
            <tr valign="middle">
                <td>
                    <div id="login">
                        <div id="login_wrapper">
                            <div style="margin: 0 auto;padding: 40px;">
                                <div style="height:65px;text-align:center">
                                    <div style="padding-top: 30px;font-size: 26px;text-shadow: rgba(0,0,0,.15) 0 0 1px;    font-family: Microsoft YaHei;font-weight: 400;line-height: 1.2;color: #37474f;">钧优ERP管理云</div>
                                </div>
                                <div id="txError" style="margin-left: 60px; height: 45px; color: red; font-size: 12px;"></div>
                                <div style="height: 36px;margin-bottom: 30px;">
                                    <div class="input-icon">
                                        <i class="fa fa-user"></i>
                                        <input class="form-control" type="text" style="width: 100%;" id="Username" name="Username" placeholder="请输入您的用户名" autocomplete="off">
                                    </div>
                                </div>
                                <div style="height: 36px;margin-bottom: 20px;">
                                    <div class="input-icon">
                                        <i class="fa fa-lock"></i>
                                        <input class="form-control" style="width: 100%;" id="Password" name="Password" type="password" placeholder="请输入您的密码" autocomplete="off" onkeyup="CheckLogin()">
                                    </div>
                                </div>
                                <div style="height: 22px;">
                                    <div class="checkbox-custom checkbox-inline checkbox-primary pull-left">
                                        <input type="checkbox" id="saveCookie" name="checkbox" checked>
                                        <label for="inputCheckbox" class="fa" style="padding-top:3px;">记住用户</label>
                                    </div>
                                    
                                </div>
                                <div style="margin-top:34px;">
                                    <div style="width: 100%;">
                                        <input id="btnOk" class="btn blue-btn login-btn" type="button" value="登 录">
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                </td>
            </tr>

        </tbody>
    </table>
    <div class="footer">
        <div class="page-footer-inner">
            <i class="footericon"></i>
            <span class="footertext">Copyright © 2014-2018 Jun You All Rights Reserved.<a target="_blank" href="http://www.miitbeian.gov.cn">沪ICP备17046296号</a> </span>
        </div>
    </div>
    <script type="text/javascript">
        @if (Yar.Service.UIHelper.IsMobileRequest(context))
        {
            <text>
        window.location = '/index.html';
            </text>
        }
                    function CheckLogin() {
                        var code = event.keyCode;
            if (13 == code) {
                Login.Login();
            }
        };
        $(document).ready(function () {
            Login.init('/','@Yar.Core.YarSystem.Current.Id');
        });
    </script>
</body>
</html>
